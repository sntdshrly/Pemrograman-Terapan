               <Font name="Arial Black" size="12.0" />
            </font>
         </Button>
          <Button fx:id="buttonKurang" onAction="#onButtonClick" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #8080ff;" text="-" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="1">
