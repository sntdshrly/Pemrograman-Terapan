         <Insets bottom="-30.0" />
      </padding>
   </AnchorPane>
    <TextField fx:id="bil1" />
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <Label text="Bilangan 2:" />
      </children>
      <padding>
         <Insets bottom="-30.0" />
      </padding>
   </AnchorPane>
    <TextField fx:id="bil2" />
   <AnchorPane layoutX="30.0" layoutY="113.0" prefHeight="200.0" prefWidth="200.0">
      <children>
         <Label text="Hasil:" />
      </children>
      <padding>
         <Insets bottom="-30.0" />
      </padding>
   </AnchorPane>
    <TextField fx:id="hasil" prefHeight="52.0" prefWidth="166.0" />
