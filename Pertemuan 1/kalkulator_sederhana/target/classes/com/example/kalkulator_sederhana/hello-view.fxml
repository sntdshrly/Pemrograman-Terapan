         </Button>
          <Button fx:id="buttonKali" onAction="#onButtonClick" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #8080ff;" text="*" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="1">
            <font>
               <Font name="Arial Black" size="12.0" />
            </font>
         </Button>
          <Button fx:id="buttonBagi" onAction="#onButtonClick" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #8080ff;" text="/" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="1">
